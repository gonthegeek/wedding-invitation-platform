{
  "name": "wedding-invitation-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Wedding Invitation Platform",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0",
    "@sendgrid/mail": "^8.1.3",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "@types/node": "^20.2.5"
  },
  "private": true
}
