{
  "name": "wedding-invitation-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Wedding Invitation Platform",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/translate": "^8.5.1",
    "@sendgrid/mail": "^8.1.5",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^5.1.1",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "typescript": "^5.1.3"
  },
  "private": true
}
